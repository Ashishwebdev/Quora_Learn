<%= form_for  @question  do |q|%>
    <div class="form-group">
      <%=q.label :ask%><br/>
      <%=q.text_field :body,class: 'form-control'%><br/>
    </div>

    <div class="form-group">
      <%=q.label :topics%><br/>
      <%=q.select :topic_id,Topic.all.collect {|x| [x.body,x.id]},{:include_blank=>'select One'},class:'form-control'%><br/><br/>
    </div>



    <%= q.submit "Submit", class:'btn btn-primary'%>
<% end %>