<html>
<head>
	<%= stylesheet_link_tag  'user', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>

<div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
       <div id="Customize">

<div id= "logo">
  <%=image_tag "quora.png",:size => "80x50"%>
</div>
<div id="search">
	<div>
<textarea class="selector_input text" type="text" placeholder="Ask or Search Quora">
</textarea></div>
<div id="question"><a>Ask Question</a></div>

	</div>

<div id="Right">

        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li>
                 <a id="read_content" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                   <div id="logo_read"></div>
                   <div id = "read">Read</div></a>
            </li>
          	<li>
               <a id="answer_content" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                 <div id="logo_answer"></div>
                 <div id="answer">Answer</div>
               </a>
            </li>
      <li>
          <a id="notification_content" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <div id="logo_notification"></div>
            <div id="notification">  Notification</div>
          </a>
      </li>
            <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=@user.username%> <span class="caret"></span></a>
              <ul class="dropdown-menu">
            <li> <div id="user-widget">
                    <% if current_user %>
        Welcome <strong><%= current_user.username %></strong>!
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <% else %>
          </br>
     
           <% end %>
                </div></li>
          </ul>
        </li>
          </ul>
</div><!--/.nav-collapse -->
</div>
      </div>
</div>

<section>
<div id = "user_interest_topics">
	<h3> your topic of interests </h3>
      <% @topics.each do |topic|%>
    <li> <%= topic.content%></li> </br>
     <% end %>
 </div>    
    <div id="user_written_question">
    	<h3> your asked questions</h3>
      <% @questions.each do |question|%>
     <%= question.content%> 
</br>
      <%if question.answers %>
      	 <% question.answers.each do |answer|%>
      	<%= answer.content%>
      	 <%end%>

      <%end%>
       </br>
     <% end %>
</div>
</section>
 
</body>
</html>     